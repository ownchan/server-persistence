      <property name="targetTable" value="ocn_user_ban"/>
    </include>
  </select>

  <select id="get" resultMap="defaultResultMap">
    <include refid="org.ownchan.server.persistence.mapper.GenericMapper.fetchOrStreamAll">
      <property name="targetTable" value="ocn_user_ban"/>
    </include>
    where id = #{id}
  </select>

  <delete id="delete">
    <include refid="org.ownchan.server.persistence.mapper.GenericMapper.deleteAll">
      <property name="targetTable" value="ocn_user_ban"/>
    </include>
    where id = #{id}
  </delete>

  <insert id="insert">
    <selectKey keyProperty="obj.id" order="AFTER" resultType="long">
      select last_insert_id()
    </selectKey>
    insert into ocn_user_ban (
      user_id,
      active,
      ban_expiration_time,
      ban_reason,
      ban_initiator_id
    )
    values (
      #{obj.userId},
      #{obj.active},
      #{obj.banExpirationTime},
      #{obj.banReason},
      #{obj.banInitiatorId}
    )
    <if test="ignoreDuplicateKey">
      on duplicate key update
        id = last_insert_id(id)
        <if test="updateOnDuplicateKey">
          ,
          <include refid="assignUpdateValues"/>
        </if>
    </if>
  </insert>

  <update id="update">
    update ocn_user_ban
    set
      <include refid="assignUpdateValues"/>
    where id = #{obj.id}
  </update>

  <sql id="assignUpdateValues">
      user_id = #{obj.userId},
      active = #{obj.active},
      ban_expiration_time = #{obj.banExpirationTime},
      ban_reason = #{obj.banReason},
      ban_initiator_id = #{obj.banInitiatorId}
  </sql>

